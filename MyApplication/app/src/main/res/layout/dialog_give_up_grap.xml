<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    >



        <TextView

            app:layout_marginTopPercent="5%"
            android:id="@+id/txt"
            android:background="@drawable/yuanjiao_txt"
            app:layout_widthPercent="72%"
            app:layout_heightPercent="14%"
            android:gravity="center"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="请确认客户是否放弃进件" />


        <LinearLayout
            app:layout_widthPercent="72%"
            android:layout_below="@id/txt"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_about"
            android:orientation="horizontal">

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/mBtn_cancel"
                android:layout_width="0dp"
                android:background="@drawable/yuanjiao_dialog1"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                />

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:id="@+id/mBtn_conform"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao_dialog2"
                android:text="确认"
                android:textColor="#fff" />

        </LinearLayout>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10%"
        android:src="@mipmap/tanchuang_jinjian" />

</android.support.percent.PercentRelativeLayout>