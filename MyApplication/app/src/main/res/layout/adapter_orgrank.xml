<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginBottom="2dp">


    <TextView
        android:id="@+id/linegeren"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#508a8a8a" />

    <TextView
        android:id="@+id/mTxt_geren_number"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_above="@id/linegeren"
        android:layout_marginLeft="10dp"
        android:gravity="right|center_vertical"
        android:textColor="#555555"
        android:textSize="14sp" />



    <TextView
        android:id="@+id/mTxt_geren_money"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#555555"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mTxt_geren_componey"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/mTxt_geren_number"
        android:layout_toLeftOf="@id/mTxt_geren_money"
        android:layout_marginLeft="20dp"
        android:gravity="left|center_vertical"
        android:textColor="#555555"
        android:textSize="14sp" />

</RelativeLayout>