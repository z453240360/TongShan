<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="#000"
        android:textSize="20sp" />


    <Button
        android:id="@+id/mBtn_updata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center"
        android:onClick="onClick"
        android:text="关于我们"
        android:textSize="20sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/mTxt_gerenname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/img_center"
        android:text="你好张三" />

    <TextView
        android:id="@+id/mTxt_bangding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_center"
        android:layout_marginLeft="10dp"
        android:text="绑定手机" />

    <TextView
        android:id="@+id/mTxt_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_center"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/mTxt_bangding"
        android:text="123456789" />


    <TextView
        android:id="@+id/mTxt_mendian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTxt_bangding"
        android:layout_marginLeft="10dp"
        android:text="所属门店" />

    <TextView
        android:id="@+id/mTxt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTxt_bangding"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/mTxt_bangding"
        android:text="上海福州路营业部" />





    <Button
        android:id="@+id/mBtn_tuichu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="退出" />

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mBtn_tuichu"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/mBtn_bangzhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="帮助中心" />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/mBtn_bangzhu"
            android:background="#aaaaaa" />
        <Button
            android:id="@+id/mBtn_women"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mBtn_bangzhu"
            android:background="@null"
            android:text="关于我们" />
    </RelativeLayout>
</RelativeLayout>