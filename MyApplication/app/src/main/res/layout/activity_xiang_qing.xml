<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xiang_qing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ts888.tongshan.tongshan.activity.XiangQingActivity">


    <LinearLayout
        android:id="@+id/ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:onClick="onClick"
                android:layout_weight="1"
                android:id="@+id/mBnt_jichu"
                android:text="基础信息"
                android:button="@null"
                android:textSize="22sp"
                android:gravity="center"
                android:background="@null"
                android:textColor="@drawable/radiobuttoncolor"
                android:drawableTop="@drawable/radiodrawablejichu"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:textSize="22sp"
                android:onClick="onClick"
                android:id="@+id/mBnt_jichu2"
                android:text="状态查询"
                android:background="@null"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/radiobuttoncolor"
                android:drawableTop="@drawable/radiodrawablezhuangtai"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </RadioGroup>



    </LinearLayout>


    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll"
        android:id="@+id/frame_xiangqing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
