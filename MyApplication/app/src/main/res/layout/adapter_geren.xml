<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="50dp">

    <TextView
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="right|center_vertical"
        android:id="@+id/mTxt_geren_number"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="第一名" />

    <TextView
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_toRightOf="@id/mTxt_geren_number"
        android:id="@+id/mTxt_geren_componey"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="上海营业部" />

    <TextView
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_toRightOf="@id/mTxt_geren_componey"
        android:id="@+id/mTxt_geren_name"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:text="张三" />

    <TextView
        android:layout_alignParentRight="true"
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_toRightOf="@id/mTxt_geren_name"
        android:id="@+id/mTxt_geren_money"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="120万" />

</RelativeLayout>