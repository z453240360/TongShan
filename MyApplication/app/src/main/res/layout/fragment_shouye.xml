<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@null"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_heng" />

    <ImageView
        android:layout_marginTop="5dp"
        android:src="@mipmap/banner_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@null"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@null"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:background="@null"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <!--jinjian-->
                <Button
                    android:layout_margin="5dp"
                    android:paddingTop="50dp"
                    android:onClick="onClick"
                    android:background="#ffffff"
                    android:id="@+id/mBtn_jinjian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/jinjian"
                    android:text="进件"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:background="@null"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <!--kehu +shenpi-->
                <Button
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2.5dp"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:id="@+id/mBtn_kehu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/kehu"
                    android:text="客户"
                    android:textColor="#000000" />

                <Button
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="false"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:id="@+id/mBtn_shenpi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/shenpi"
                    android:text="审批"
                    android:textColor="#000000" />


            </LinearLayout>

            <LinearLayout
                android:background="@null"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:layout_marginBottom="5dp"
                    android:clickable="false"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:id="@+id/mBtn_qiangdan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/qiangdan"
                    android:text="抢单"
                    android:textColor="#000000" />
                <Button
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:id="@+id/mBtn_shisuan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/shisuangongju"
                    android:text="试算工具"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@null"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:background="@null"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
<!--gerenyeji-->
                    <Button
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="false"
                        android:background="#ffffff"
                        android:id="@+id/mBtn_yeji"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/gerenyeji"
                        android:text="个人业绩"
                        android:textColor="#000000" />



                </LinearLayout>
                <LinearLayout
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <!--longhubang +gonggao-->
                    <Button
                        android:paddingRight="5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="false"
                        android:background="#ffffff"
                        android:id="@+id/mBtn_longhu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/longhubang"
                        android:text="龙虎榜"
                        android:textColor="#000000" />

                    <Button
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingTop="5dp"
                        android:clickable="false"
                        android:background="#ffffff"
                        android:id="@+id/mBtn_gonggao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/gonggaolan"
                        android:text="公告栏"
                        android:textColor="#000000" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="50dp"
                    android:clickable="false"
                    android:background="#ffffff"
                    android:drawablePadding="10dp"
                    android:textColor="#000000"
                    android:id="@+id/mBtn_chanpin"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/chanpinzhongxin"
                    android:text="产品中心" />


                <!--chanpin zhongxin-->
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



</LinearLayout>