<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="55dp">


    <TextView
        android:id="@+id/linegeren"
        android:background="#508a8a8a"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <TextView
        android:textColor="#555555"
        android:textSize="14sp"
        android:gravity="right|center_vertical"
        android:id="@+id/mTxt_geren_number"
        android:layout_width="65dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:layout_above="@id/linegeren"
        />




    <TextView
        android:layout_alignParentRight="true"
        android:textColor="#555555"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:id="@+id/mTxt_geren_money"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        />

    <TextView
        android:textColor="#555555"
        android:textSize="14sp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/mTxt_geren_money"
        android:id="@+id/mTxt_geren_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
         />
    <TextView
        android:textColor="#555555"
        android:textSize="14sp"
        android:gravity="left|center_vertical"
        android:layout_toRightOf="@id/mTxt_geren_number"
        android:layout_toLeftOf="@id/mTxt_geren_name"
        android:id="@+id/mTxt_geren_componey"
        android:layout_width="130dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent"
        />

</RelativeLayout>