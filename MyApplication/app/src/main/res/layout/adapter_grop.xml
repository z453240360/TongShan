<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="50dp">


    <TextView
        android:id="@+id/linegeren"
        android:background="#508a8a8a"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <TextView
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="right|center_vertical"
        android:id="@+id/mTxt_geren_number"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:layout_above="@id/linegeren"
        android:text="第一名" />
    <TextView
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_toRightOf="@id/mTxt_geren_number"
        android:id="@+id/mTxt_geren_componey"
        android:layout_width="100dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_height="match_parent"
        android:text="上海营业部" />

    <TextView
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toRightOf="@id/mTxt_geren_componey"
        android:id="@+id/mTxt_geren_name"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="张三" />

    <TextView
        android:layout_alignParentRight="true"
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toRightOf="@id/mTxt_geren_name"
        android:id="@+id/mTxt_geren_money"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="120万" />

</RelativeLayout>